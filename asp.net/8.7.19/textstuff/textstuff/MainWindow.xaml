<Window x:Class="textstuff.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:textstuff"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="block" Name="block"/>
        <TextBox Text="" TextChanged="TextBox_TextChanged" SpellCheck.IsEnabled="True"/>
        <TextBox Text="" SelectionChanged="TextBox_SelectionChanged" SpellCheck.IsEnabled="True"/>
        <Label Content="Label" Name="lab" />
    </StackPanel>
</Window>
