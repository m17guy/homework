
@{
    ViewBag.Title = "data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>the data you gave us</h2>
<table class="table">
    <tr>
        <td>
            name
        </td>
        <td>
            adress
        </td>
        <td>
            over 18
        </td>
    </tr>
    <tr>
        <td>
            @Request["name"]
        </td>
        <td>
            @Request["adress"]
        </td>
        <td>
            @if (int.Parse(Request["age"]) >= 18)
            {
                <p>yes</p>
            }
            else
            {
                <p>no</p>
            }
        </td>
    </tr>
</table>

