<UserControl  x:Class="WpfApp38.MailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp38"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
	<StackPanel Orientation="Vertical" Background="LightSeaGreen">
		<TextBlock Name="mailHeading"></TextBlock>
		<TextBox Name="mail1" TextChanged="Mail1_TextChanged"  />
		<TextBox Name="mail2" TextChanged="Mail1_TextChanged" />
	</StackPanel>
</UserControl>
